---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Web-site of the best couple on the modworkshop!" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&family=Fira+Sans:wght@400;700&display=swap');
	html {
		box-sizing: border-box;
		background-color: #fff;
		font-family: 'Fira Sans', 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
	}
	*,
	*:before,
	*:after {
		box-sizing: inherit;
	}
	body {
		margin: 0;
		padding: 0;
	}
</style>
