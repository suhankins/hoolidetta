---
export interface props {
    name: string;
    image: string;
    description: string;
    linkToMWS?: string;
}
const { name, image, description, linkToMWS } = Astro.props;
---

<article>
    <img class="blur" src={image} aria-hidden="true" />
    <img src={image} alt={`${name} thumbnail`} />
    <a href={linkToMWS}>{name}</a>
    <p>{description}</p>
</article>
<style>
    article {
        position: relative;
        overflow: hidden;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        color: white;
        background-color: #333;
        border-radius: 1rem;
    }
    article > * {
        z-index: 1;
    }
    img {
        border-radius: 1rem 1rem 0 0;
        width: 100%;
        height: auto;
    }
    img.blur {
        filter: blur(30px);
        position: absolute;
        z-index: 0;
    }
    a {
        margin: 1rem 0;
        font-size: 1.5rem;
        background-image: linear-gradient(to top right, #0ff 0%, #f0f 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
        transition: background-position 0.1s ease-in-out;
    }
    a:is(:hover, :focus) {
        background-position: 100%;
    }
    p {
        margin: 0;
        font-size: 1rem;
    }
</style>
