---
import me from '../../public/meandhoney/me.webp';
import honey from '../../public/meandhoney/honey.webp';
import heart from '../../public/meandhoney/animatedheart.webp';
---

<div class="meandhoneyContainer">
    <div class="meandhoney">
        <img
            class="pfp"
            src={me.src}
            alt="Punished Bernadetta's profile picture"
        />
        <img
            class="heart"
            src={heart.src}
            alt="Animated sparkling heart"
        />
        <img
            class="pfp"
            src={honey.src}
            alt="Hooligan's profile picture"
        />
    </div>
</div>
<style>
    .meandhoneyContainer {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding: 0 1rem;
    }
    .meandhoney {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: 100%;
        max-width: 60ch;
        position: relative;
    }
    .pfp {
        width: 50%;
        aspect-ratio: 1/1;
        border-radius: 99999px;
        margin: 0 1rem;
        box-shadow:
            0 0 0 0.25rem #fff,
            0 0 0 0.5rem hotpink;
    }
    .heart {
        width: 10rem;
        height: 10rem;
        position: absolute;
    }
    @media screen and (max-width: 500px) {
        .heart {
            width: 6rem;
            height: 6rem;
            position: absolute;
        }
    }
</style>
